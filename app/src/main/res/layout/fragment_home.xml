<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/B_home_upgrade"
        android:text="Upgrade"
        android:textStyle="bold"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_first_features"
        android:background="@drawable/background_fragment_home_first"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/B_home_upgrade">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_first_sentence"
            android:background="@drawable/background_fragment_home_first_sentence"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginStart="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/first_features_detail"
            app:layout_constraintStart_toStartOf="@id/bg_first_features">

            <TextView
                android:id="@+id/tv_first_sentence"
                android:text="開閉しました。"
                android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:text="y分前"
                android:textSize="20sp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/tv_first_sentence"
                app:layout_constraintTop_toTopOf="@id/bg_first_sentence"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/first_features_detail"
            android:text="詳細"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_second_features"
        android:background="@drawable/background_fragment_home_second"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toBottomOf="@+id/bg_first_features"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_second_sentence"
            android:background="@drawable/background_fragment_home_second_sentence"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginStart="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/second_features_detail"
            app:layout_constraintStart_toStartOf="@id/bg_second_features">

            <TextView
                android:id="@+id/tv_second_sentence"
                android:text="給湯器の電源..."
                android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:text="Δ分前"
                android:textSize="20sp"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/tv_second_sentence"
                app:layout_constraintTop_toTopOf="@id/bg_second_sentence"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/second_features_detail"
            android:text="詳細"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
